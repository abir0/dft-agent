# DFT Agent Environment Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# LLM API Keys
# =============================================================================

# OpenAI API Key (required for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Groq API Key (optional, for high-speed inference)
GROQ_API_KEY=your_groq_api_key_here

# HuggingFace API Key (optional, for open-source models)
HF_API_KEY=your_huggingface_api_key_here

# Ollama Configuration (optional, for local models)
OLLAMA_MODEL=llama3
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# Materials Science APIs
# =============================================================================

# Materials Project API Key (optional, for materials database access)
MP_API_KEY='sO1Ny4ZPaStYaacwSC5pFaycMLfLJXjj'

# Asta API Key (optional, for scientific paper search)
ASTA_KEY=your_asta_api_key_here

# =============================================================================
# Server Configuration
# =============================================================================

# Server host and port
HOST=0.0.0.0
PORT=8080

# Authentication (optional)
AUTH_SECRET=your_auth_secret_here

# =============================================================================
# DFT Calculation Settings
# =============================================================================

# Default working directory for DFT calculations
WORKING_DIRECTORY=/path/to/your/workspace

# Quantum ESPRESSO executable path (if not in PATH)
QE_EXECUTABLE_PATH=/usr/local/bin/pw.x

# Default pseudopotential directory
PSEUDOPOTENTIAL_DIR=/path/to/pseudopotentials

# =============================================================================
# Development Settings
# =============================================================================

# Development mode (enables debug logging)
MODE=dev

# Use fake model for testing (no API calls)
USE_FAKE_MODEL=false

# =============================================================================
# Database Configuration
# =============================================================================

# SQLite database path for conversation checkpoints
DATABASE_URL=sqlite:///checkpoints.db

# =============================================================================
# Agent URL (for frontend)
# =============================================================================

# URL where the agent service is running (for frontend connection)
AGENT_URL=http://localhost:8080
